  <body>
    <div class="container">
      <h1>Therapists Profiles</h1>

      <div
        class="profile"
        data-name="John Doe"
        data-specialization="Pediatric Speech Therapy"
      > 
      <img
          src="<%= isTherapist? therapist.profilePhoto: '' %>"
          alt="<%= therapist.username %>"
          class="profile-photo"
        />
        <div class="profile-info">
          <h2>Dr. <%= therapist.username %></h2>
          <p>
            <strong>Qualifications:</strong> <%= therapist.qualifications %>
          </p>
          <p>
            <strong>Certifications:</strong> <%= therapist.certifications %>
          </p>
          <p><strong>Experience:</strong> <%= therapist.experience %> years</p>
          <p>
            <strong>Specialization:</strong> <%= therapist.specialization %><%=
            therapist.specialization %>
          </p>
          <p><strong>About:</strong> <%= therapist.about %></p>
        </div>
        <button class="book-btn" <%= isTherapist ? 'hidden' : '' %>  onclick="openBookingModal(<%= `'${therapist.username}'` %>)">
          Book
        </button>
      </div>

