    <form id="bookingModal" class="modal" action="sendBookingData" method="post">
      <div class="modal-content">
        <span class="close" onclick="closeBookingModal()">&times;</span>
        <h2>Book an Appointment</h2>
        <p>
          Select a date and time for your appointment with
          <span id="therapistName"></span>:
        </p>
        <label for="appointmentDate">Date:</label>
        <input type="date" id="appointmentDate" name="date" required />
        <input type="text" id="therapistId" name="therapistId" value="<%= therapist._id %>" hidden />
        <label for="appointmentTime">Time:</label>
        <input type="time" id="appointmentTime" name="time" required />
        <button class="confirm-btn" type="submit">Request</button>
      </div>
    </form>

