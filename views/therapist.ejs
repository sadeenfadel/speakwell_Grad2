<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SpeakWell - Therapist Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/css/parent.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"
          >Speak<span>Well - Therapist Portal</span></a
        >

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="appointment">Appointments</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Therapist Welcome Section -->
    <nav class="home">
      <p class="h1">Welcome, <span id="username"><%= username %></span>!</p>
      <p class="h2">Manage your sessions and resources here.</p>
      <button class="getstarted" type="button">Get Started</button>
    </nav>

    <!-- Footer -->
    <footer>
      <p class="fp1">SpeakWell</p>
      <div class="social">
        <a href="#"><i class="fa-brands fa-facebook"></i></a>
        <a href="#"><i class="fa-brands fa-instagram"></i></a>
        <a href="#"><i class="fa-brands fa-linkedin"></i></a>
      </div>
    </footer>

    <!-- Script to fetch and display username -->
    <script>
      // Simulating fetching the username (in a real scenario, fetch it from the server)
      document.addEventListener('DOMContentLoaded', function () {
        var username = '<%= username %>'; // Replace with the actual therapist's name
        document.getElementById('username').textContent = username;
      });
    </script>
  </body>
</html>
